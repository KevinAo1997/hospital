<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aokai.hospital.dao.DoctorMapper">
  <resultMap id="BaseResultMap" type="com.aokai.hospital.po.Doctor">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="username" jdbcType="VARCHAR" property="username" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="fee" jdbcType="INTEGER" property="fee" />
    <result column="sex" jdbcType="VARCHAR" property="sex" />
    <result column="age" jdbcType="TINYINT" property="age" />
    <result column="office_name" jdbcType="VARCHAR" property="officeName" />
    <result column="career" jdbcType="VARCHAR" property="career" />
